{
  "name": "sudokuru-frontend",
  "version": "1.0.0",
  "main": "./app/App.tsx",
  "scripts": {
    "prepare": "husky install",
    "playwright:test": "npx playwright test",
    "playwright:test:chrome": "npx playwright test --project=chromium",
    "playwright:ui": "npx playwright test --ui",
    "playwright:report": "npx playwright show-report playwright-report",
    "start": "expo start --clear",
    "start:tunnel": "expo start --tunnel --clear",
    "android": "expo start --android --clear",
    "ios": "expo start --ios --clear",
    "web": "npx expo start --web --clear",
    "web:dev": "cross-env ENV=development npx expo start --web --clear",
    "build:metro-web": "npx expo export --platform web",
    "preview:vercel": "vercel --name sudokuru-dev --yes",
    "prettier:run": "npx prettier --write .",
    "tauri:run": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "expo:check": "npx expo install --check",
    "snyk:opensource": "npx snyk test --all-projects --exclude=.vercel --org=sudokuru",
    "snyk:code": "npx snyk code test --org=sudokuru"
  },
  "lint-staged": {
    "**/*": "npx prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@expo-google-fonts/inter": "^0.2.3",
    "@expo/metro-runtime": "~3.2.1",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-navigation/bottom-tabs": "^6.5.8",
    "@react-navigation/drawer": "^6.6.3",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/stack": "^6.3.17",
    "expo": "~52.0.6",
    "expo-status-bar": "~1.12.1",
    "expo-updates": "~0.26.7",
    "polished": "^4.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.3",
    "react-native-awesome-alerts": "^2.0.0",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-paper": "^5.5.2",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "4.10.1",
    "react-native-screens": "3.31.1",
    "react-native-web": "~0.19.10",
    "sudokuru": "3.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@expo/metro-config": "~0.18.1",
    "@playwright/test": "^1.41.2",
    "@tauri-apps/cli": "^1.5.5",
    "@types/dotenv-safe": "^8.1.5",
    "@types/node": "^20.11.17",
    "@types/react": "~18.2.79",
    "@types/react-native-web": "^0.19.0",
    "babel-plugin-istanbul": "^6.1.1",
    "cross-env": "^7.0.3",
    "dotenv-safe": "^9.0.0",
    "expo-doctor": "^1.4.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "metro": "~0.80.8",
    "monocart-reporter": "^2.6.0",
    "prettier": "2.8.8",
    "snyk": "^1.1259.0",
    "typescript": "~5.3.3",
    "vercel": "^28.18.1"
  },
  "private": true
}
